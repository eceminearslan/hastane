@model (List<Branslar> branslar, List<Doktorlar> doktorlar)

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <title>Hastane Otomasyonu</title>
    <link rel="icon" type="image/x-icon" href="assets/favicon.ico" />

    <link href="css/styles.css" rel="stylesheet" />
</head>
<body>
    <div class="d-flex float-left" id="wrapper"> 
        <div class="border-end bg-white" id="sidebar-wrapper">
            <div class="sidebar-heading border-bottom bg-light">BRANŞLAR</div>
            <div class="list-group list-group-flush">

                @foreach (var item in Model.branslar)
                {
                    <a class="list-group-item list-group-item-action list-group-item-light p-3" asp-action="Index" asp-route-id="@item.BransId">@item.BransAd</a>
                }
            </div>
        </div>

        <div id="page-content-wrapper" class="float-right">

            <table class="table table-striped">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Branş Adı</th>
                        <th scope="col">Ad Soyad</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.doktorlar)
                    {
                        <tr>
                            <td scope="row">@item.DoktorId</td>
                            <td>@item.Brans.BransAd</td>
                            <td>@item.DoktorAdSoyad</td>
                            <td>
                                <a asp-action="DeleteDoktor" asp-route-id="@item.DoktorId" class="btn btn-danger">Sil</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="js/scripts.js"></script>
</body>
</html>

